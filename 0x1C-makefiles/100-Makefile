CC = gcc
SRC = main.c holberton.c
OBJ = $(subst .c,.o, $(SRC))
NAME = holberton
RM = rm
CFLAGS= -Wall -Werror -Wextra -pedantic

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f $(NAME) *~

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

re:
	$(CC) $(CFLAGS) -c $(SRC)